<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ifpr.pgua.eic.simuladorsubway.gui.controls.AdicionarPedido"
          prefHeight="400.0" prefWidth="600.0">



    <Label text="Clientes" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ListView fx:id="ltwClientes" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Ingredientes" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ListView fx:id="ltwIngredientes" GridPane.rowIndex="1" GridPane.columnIndex="1" onMouseClicked="#processaIngrediente" />
    <Text fx:id="txtValor" text="R$ 0.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Bebidas" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ListView fx:id="ltwBebidas" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <HBox GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="Adicionar" onAction="#adicionar"/>
        <Button text="Cancelar" onAction="#cancelar"/>

    </HBox>






</GridPane>
